<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="co.progredi.conceptosbasicos.DetalleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_nombre" />

    <TextView
        android:id="@+id/tvNombreDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_apellido" />

    <TextView
        android:id="@+id/tvApellidoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_correo" />

    <TextView
        android:id="@+id/tvCorreoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
